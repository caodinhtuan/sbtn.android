<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/purchased_package_header_child_thumb"
        android:layout_width="@dimen/package_value_text"
        android:layout_height="@dimen/package_value_text"
        android:background="@color/black"
        android:gravity="center"
        tools:src="@drawable/icon_app" />

    <onworld.sbtn.views.MyTextRobotoCondensedBold
        android:id="@+id/purchased_package_header_child_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/purchased_package_header_child_thumb"
        android:background="@color/black"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="visible"
        tools:text="Title" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/purchased_package_header_child_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/purchased_package_header_child_title"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/purchased_package_header_child_thumb"
        android:background="@color/black"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="package_detail_header_child_package" />

    <Button
        android:id="@+id/purchased_package_header_purchased"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/purchased_package_header_child_description"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/purchased_package_header_child_thumb"
        android:background="@drawable/package_purchase_shape_grey"
        android:paddingLeft="10dp"
        android:text="Purchased"
        android:textColor="@color/white" />


</RelativeLayout>