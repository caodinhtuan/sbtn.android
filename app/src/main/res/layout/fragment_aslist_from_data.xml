<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical"
    tools:context=".fragments.homedetails.ListFromDataFragment">

    <TextView
        android:id="@+id/text_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="There is no video/audio"
        android:visibility="gone" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/timeline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/home_text_header"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_grid_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
