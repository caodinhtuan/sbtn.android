<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="onworld.sbtn.fragments.homes.AccountInfoFragment">

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/user_info_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="User Info"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:visibility="gone" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_info_title"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Full Name: "
        android:textSize="20sp"
        android:textStyle="italic" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/accountinfo_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/user_info_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/full_name"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="N/A"
        android:textSize="20sp" />
    />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/accountinfo_first_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/full_name"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="First Name: "
        android:textSize="20sp"
        android:textStyle="italic" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/accountinfo_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/full_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/accountinfo_first_name_title"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="N/A"
        android:textSize="20sp" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/accountinfo_last_name_title"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountinfo_first_name_title"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Last Name: "
        android:textSize="20sp"
        android:textStyle="italic" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/accountinfo_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/accountinfo_first_name_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/accountinfo_last_name_title"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="N/A"
        android:textSize="20sp" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/accountinfo_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountinfo_last_name_title"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Email: "
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/accountinfo_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/accountinfo_last_name_title"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/accountinfo_email_title"
        android:gravity="right"
        android:paddingRight="10dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_signout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountinfo_email_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_shape"
        android:text="Sign out"
        android:textColor="@color/white" />
</RelativeLayout>
