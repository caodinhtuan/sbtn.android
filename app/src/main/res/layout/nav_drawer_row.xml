<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_width"
    android:layout_gravity="center_vertical"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/menu_layout_pading_left">

    <ImageView
        android:id="@+id/id_navigationdrawer_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:padding="12dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/id_navigationdrawer_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/menu_layout_pading_left"
        android:textColor="@color/white"
        android:textSize="@dimen/drawer_text_size"
        tools:text="title" />

    <ImageView
        android:id="@+id/id_expand_toggle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_keyboard_arrow_down_white_36dp" />
</LinearLayout>