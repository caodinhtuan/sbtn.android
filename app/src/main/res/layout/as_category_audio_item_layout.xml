<?xml version="1.0" encoding="utf-8"?>

<onworld.sbtn.views.AudioCategoryLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/recyclerview_item_margin_bottom"
    android:layout_marginLeft="@dimen/recyclerview_item_margin"
    android:layout_marginRight="@dimen/recyclerview_item_margin"
    android:layout_marginTop="@dimen/recyclerview_item_margin"
    android:background="@color/main_background"
    android:orientation="vertical">

    <onworld.sbtn.views.AudioDetailImageView
        android:id="@+id/thumbnail_home_grid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title_home_grid_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/thumbnail_home_grid_item"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/detail_text_title"
        tools:text="Title" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/package_category_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/package_label_type_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/package_type_label_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/package_label_text_size"
        android:visibility="gone"
        tools:text="Free" />
</onworld.sbtn.views.AudioCategoryLinearLayout>
