<?xml version="1.0" encoding="utf-8"?>

<onworld.sbtn.views.HomeVideoFixedRatioLinearLayoutHorizontal xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="6dp"
    android:background="@color/main_background">

    <onworld.sbtn.views.FixedRatioHalfNineFifteenHomeImageView
        android:id="@+id/thumbnail_home_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title_home_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/thumbnail_home_item"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/home_text_title"
        android:visibility="visible"
        tools:text="Title" />

    <onworld.sbtn.views.MyTextRobotoCondensed
        android:id="@+id/package_home_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/package_label_type_height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/package_type_label_shape"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/package_label_text_size"
        android:visibility="gone"
        tools:text="Free" />
</onworld.sbtn.views.HomeVideoFixedRatioLinearLayoutHorizontal>
