<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_list_content_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="6dp"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_list_title_height"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/recyclerview_home_header_margin"
        android:background="@color/main_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp">

        <onworld.sbtn.views.MyTextRobotoCondensedBold
            android:id="@+id/home_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/home_text_header"
            android:textStyle="bold"
            tools:text="Title" />

        <onworld.sbtn.views.MyTextRobotoCondensedBold
            android:id="@+id/home_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_border_main_color"
            android:text="MORE"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/more_text_title"
            android:textStyle="normal"
            android:visibility="visible" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/home_list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background" />


</LinearLayout>