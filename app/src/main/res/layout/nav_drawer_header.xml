<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingBottom="5dp">

    <LinearLayout
        android:id="@+id/menu_info_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="25dp">

        <com.pkmmte.view.CircularImageView
            android:id="@+id/image_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_app"
            app:border="true"
            app:border_color="@color/white"
            app:border_width="1dp"
            app:shadow="true" />

        <TextView
            android:id="@+id/user_name"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="User"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/your_content_layout_pading"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/white"

            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/menu_your_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/your_content_layout_pading"
        android:layout_marginRight="@dimen/your_content_layout_pading"
        android:layout_marginTop="5dp"
        android:background="@drawable/your_content_border">

        <onworld.sbtn.views.MyTextRobotoCondensedBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="YOUR PURCHASED CONTENT"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/menu_your_purchased_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/your_content_layout_pading"
        android:layout_marginRight="@dimen/your_content_layout_pading"
        android:layout_marginTop="5dp"
        android:background="@drawable/your_content_border">

        <onworld.sbtn.views.MyTextRobotoCondensedBold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="YOUR PURCHASED PACKAGE"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </FrameLayout>


</LinearLayout>